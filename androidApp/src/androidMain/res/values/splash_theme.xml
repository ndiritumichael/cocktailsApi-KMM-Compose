<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash Screen Theme. -->
    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/background_light</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat.Light.NoActionBar</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@android:color/background_light</item>
        <item name="android:navigationBarColor">@android:color/background_light</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>